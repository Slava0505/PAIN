<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".unsarpMasking">

    <ImageView
            android:layout_width="328dp"
            android:layout_height="476dp" tools:src="@tools:sample/avatars[3]"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/unsharpMaskingCancel" android:id="@+id/unsharpMaskingImage"/>
    <Button
            android:text="Apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="250dp" android:id="@+id/unsharpMaskingApply" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/unsharpMaskingCancel"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="537dp"
            tools:layout_editor_absoluteX="250dp" android:id="@+id/unsharpMaskingCancel"/>
    <EditText
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="537dp" tools:layout_editor_absoluteX="52dp" android:id="@+id/radiusText"
            android:text="radius"/>
    <EditText
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="605dp" tools:layout_editor_absoluteX="50dp" android:id="@+id/trashText"
            android:text="trash"/>
    <EditText
            android:layout_width="141dp"
            android:layout_height="44dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="669dp" tools:layout_editor_absoluteX="54dp" android:id="@+id/amountText"
            android:text="amount"/>
    <Button
            android:text="Do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="669dp"
            tools:layout_editor_absoluteX="250dp" android:id="@+id/doUM"/>
</android.support.constraint.ConstraintLayout>