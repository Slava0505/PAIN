<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity"
                                             android:background="@color/colorBackground"
                                             android:backgroundTint="@color/colorBackground"
                                             android:foregroundTint="@color/colorBackground">

    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/takePhoto"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:background="@drawable/ic_camera"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/gallery"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_gallery"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="205dp" android:id="@+id/guideline2"/>
    <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/aStar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/astar" app:layout_constraintStart_toStartOf="@+id/guideline2"
            android:layout_marginStart="8dp" android:shadowColor="@color/colorBackground"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="379dp" android:id="@+id/guideline7"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="207dp" android:id="@+id/guideline"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="525dp" android:id="@+id/guideline8"/>
    <ImageView
            android:layout_width="411dp"
            android:layout_height="81dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#1D1984" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:text="Photo Editor by PAIN"
            android:textAllCaps="true" android:textColor="@color/colorBackground1"
            android:textDirection="locale" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>