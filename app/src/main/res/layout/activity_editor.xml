<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditorActivity"
        android:background="@color/colorBackground">
    <ImageView
            android:layout_width="412dp"
            android:layout_height="439dp" app:srcCompat="@drawable/lenna"
            android:id="@+id/imageEditorView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/scroll" android:contentDescription="@string/todo"/>

    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <HorizontalScrollView
                android:id="@+id/hscroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"

                app:color="@color/colorToolbar">
            <LinearLayout
                    android:id="@+id/shapeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                <Button
                        android:drawableStart="@drawable/ic_camera"
                        android:scaleType="fitCenter"
                        android:id="@+id/camera_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
                <Button
                        android:drawableStart="@drawable/ic_gallery"
                        android:scaleType="fitCenter"
                        android:id="@+id/gallery_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
                <Button
                        android:drawableStart="@drawable/ic_filters"
                        android:scaleType="fitCenter"
                        android:id="@+id/filters_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
                <Button
                        android:drawableStart="@drawable/ic_resize"
                        android:scaleType="fitCenter"
                        android:id="@+id/resize_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
                <Button
                        android:drawableStart="@drawable/ic_rotation"
                        android:scaleType="fitCenter"
                        android:id="@+id/rotation_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
                <Button
                        android:drawableStart="@drawable/ic_segmintation"
                        android:scaleType="fitCenter"
                        android:id="@+id/segmintation_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
                <Button
                        android:drawableStart="@drawable/ic_line"
                        android:scaleType="fitCenter"
                        android:id="@+id/line_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/borderlessButtonStyle"
                />
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>
</android.support.constraint.ConstraintLayout>