<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RetouchActivity">


    <ImageView
            android:layout_width="321dp"
            android:layout_height="444dp" tools:src="@tools:sample/avatars[3]" android:id="@+id/retouchImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_cancel"
            app:layout_anchor="@+id/retouchImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline11" android:background="@color/colorAccent"
            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorBackground"/>
    <EditText
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/radiusRetouchValue"
            app:layout_anchor="@+id/retouchImage"
            android:text="@string/number100"
            app:layout_constraintBottom_toBottomOf="@+id/buttonRetouch"
            app:layout_constraintTop_toTopOf="@+id/buttonRetouch"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/retouchImage"/>
    <Button
            android:text="@string/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_accept"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline11" android:background="@color/colorAccent"
            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorBackground"/>
    <Button
            android:text="@string/retouch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRetouch" app:layout_constraintEnd_toEndOf="@+id/retouchImage"
            android:layout_marginEnd="8dp"
            android:textStyle="bold" android:textSize="18sp"
            android:textColor="@color/colorBackground" android:background="@color/colorAccent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/retouchImage"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.03"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="60dp" android:id="@+id/guideline11"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="523dp"
            android:id="@+id/guideline13"/>

</android.support.constraint.ConstraintLayout>